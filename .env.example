# Roovision Configuration
# Copy this file to .env and customize the values for your system
# All paths should be full absolute paths

# Source: Where Roo Code stores conversation history
# Windows default location shown - adjust for your username
ROO_TASKS_PATH=C:\Users\YOUR_USERNAME\AppData\Roaming\Code\User\globalStorage\rooveterinaryinc.roo-cline\tasks

# Output: Where changelogs are saved (full path, flat folder)
CHANGELOG_OUTPUT_PATH=C:\path\to\roovision\changelogs

# Logs: Where processed IDs are tracked (full path)
PROCESSED_IDS_LOG_PATH=C:\path\to\roovision\logs

# File age filter - only track files modified within this many days
# Set to 0 to disable (track all files regardless of age)
MAX_FILE_AGE_DAYS=7

# Skip ask-mode subtasks (they don't make code changes)
# Set to 'true' (default) to skip, 'false' to include them in changelogs
SKIP_ASK_MODE=true

# Performance tuning
MAX_READ_BYTES=5242880
# 5 MB max per file read (5 * 1024 * 1024)

OVERLAP_BYTES=2048
# 2 KB overlap for catching partial patterns

DEBOUNCE_SECONDS=3.0
# Wait time after file change before reading (allows LLM streaming to complete)

# Log rotation settings
MAX_LOG_FILE_SIZE_BYTES=1048576
# 1 MB per log file (1 * 1024 * 1024)

LOG_ROTATION_COUNT=3
# Keep 3 rotated log files (.log, .log.1, .log.2)
